<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;netstandard2.0;net47;net461;net462</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyVersion>1.2.1.2</AssemblyVersion>
    <FileVersion>1.2.1.2</FileVersion>
    <PackageTags>Elastic, ElasticSearch</PackageTags>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <PackageReleaseNotes>- FIXED: Update call didn't update the Version property in the POCO</PackageReleaseNotes>
    <Version>1.2.1.2</Version>
    <PackageLicenseUrl>https://github.com/petertasner/ElasticSearchLite/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/petertasner/ElasticSearchLite</PackageProjectUrl>
    <Company />
    <Authors>Peter Tasner</Authors>
    <RepositoryUrl>https://github.com/petertasner/ElasticSearchLite</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <Description>A simple .NET wrapper for ElasticSearch.Net</Description>
    <Product>ElasticSearchLite.Net</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Elasticsearch.Net" Version="5.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>

</Project>